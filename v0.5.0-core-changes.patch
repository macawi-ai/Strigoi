+				errors = append(errors, fmt.Errorf("failed to stop stream %s: %w", id, err))
+			}
+		}
+	}
+	
+	if len(errors) > 0 {
+		return fmt.Errorf("failed to stop %d streams", len(errors))
+	}
+	
+	return nil
+}
