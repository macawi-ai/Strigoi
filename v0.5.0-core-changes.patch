+	a.mu.RLock()
+	defer a.mu.RUnlock()
+	
+	// Return a copy to prevent external modification
+	mapping := make(map[string]string)
+	for k, v := range a.reverseMap {
+		mapping[k] = v
+	}
+	return mapping
+}
