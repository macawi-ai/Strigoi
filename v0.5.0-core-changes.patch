+    case *stream.SecurityAlert:
+        if s.shouldLog(v.Severity, "alert") {
+            msg := s.formatSecurityAlert(v)
+            sent = s.sendToSyslog(v.Severity, msg)
+        }
+        
+    case string:
+        // Generic log message
+        sent = s.sendToSyslog("info", v)
+        
+    default:
+        return nil, fmt.Errorf("unsupported input type: %T", input)
+    }
+    
+    if sent {
+        s.mu.Lock()
+        s.eventCount++
