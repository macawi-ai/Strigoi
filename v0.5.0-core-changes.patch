+	if config == nil {
+		config = DefaultConfig()
+	}
+
+	if logger == nil {
+		return nil, fmt.Errorf("logger is required")
+	}
+
+	ctx, cancel := context.WithCancel(context.Background())
+
+	// Initialize components
+	moduleManager := NewModuleManager(logger)
