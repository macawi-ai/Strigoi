+	
+	// Handle exit from any context
+	if command == "exit" || command == "quit" {
+		return fmt.Errorf("exit")
+	}
+	
+	// Handle help from any context
+	if command == "help" || command == "?" {
+		// Show context-specific help
+		if len(c.context) > 0 {
+			switch c.context[0] {
+			case "probe":
