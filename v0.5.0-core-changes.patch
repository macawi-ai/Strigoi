+// captureLoop continuously reads from the stream
+func (s *StdioStream) captureLoop() {
+	reader := bufio.NewReader(s.pty)
+	buffer := make([]byte, 4096)
+	
+	for {
+		select {
+		case <-s.ctx.Done():
+			return
+		default:
+			n, err := reader.Read(buffer)
+			if err != nil {
+				if err != io.EOF {
+					s.mu.Lock()
+					s.stats.ErrorCount++
+					s.mu.Unlock()
+				}
+				continue
+			}
+			
+			if n > 0 {
+				data := buffer[:n]
+				
+				// Apply filters
+				if s.shouldProcess(data) {
+					// Write to ring buffer
+					s.buffer.Write(data)
+					
+					// Update stats
+					s.mu.Lock()
+					s.stats.BytesProcessed += uint64(n)
+					s.stats.EventsCount++
+					s.stats.LastEventTime = time.Now()
+					s.mu.Unlock()
+					
+					// Notify handlers
+					s.notifyHandlers(data)
+				}
+			}
+		}
