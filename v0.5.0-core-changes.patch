+func detectVulnerability() {
+    isCached := checkSudoCache()      // sudo -n true
+    mcpCount := countMCPProcesses()   // pgrep -c mcp
+    timeout := getSudoTimeout()       // parse sudo -l
+    
+    if isCached && mcpCount > 0 {
+        return CRITICAL_RISK
+    }
+}
+```
