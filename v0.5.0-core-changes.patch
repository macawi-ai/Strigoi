+// Transform processes events and sends to syslog
+func (s *SyslogActor) Transform(ctx context.Context, input interface{}) (interface{}, error) {
+    s.mu.RLock()
+    if !s.connected || s.writer == nil {
+        s.mu.RUnlock()
+        return nil, fmt.Errorf("not connected to syslog")
