+func (am *AliasManager) RemoveAlias(alias string) error {
+	am.mu.Lock()
+	defer am.mu.Unlock()
+	
+	if _, exists := am.aliases[alias]; !exists {
+		return fmt.Errorf("alias not found: %s", alias)
+	}
+	
+	delete(am.aliases, alias)
+	return nil
