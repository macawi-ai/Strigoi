+
+func (l *SimpleLogger) Success(format string, args ...interface{}) {
+	if l.level <= LogLevelInfo {
+		l.logger.Printf("[SUCCESS] "+format, args...)
+	}
+}
+
+func (l *SimpleLogger) Fatal(format string, args ...interface{}) {
