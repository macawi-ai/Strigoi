+	}
+	defer resp.Body.Close()
+
+	// Parse response
+	var response struct {
+		Result struct {
+			Tools []Tool `json:"tools"`
+		} `json:"result"`
+		Error *struct {
+			Code    int    `json:"code"`
+			Message string `json:"message"`
+		} `json:"error"`
+	}
