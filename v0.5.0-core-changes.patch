+	}
+	
+	// Estimate request rate (simplified)
+	windowSeconds := g.errorWindow.Seconds()
+	estimatedRequests := windowSeconds * 100 // Assume 100 RPS baseline
+	
+	return float64(len(g.errors)) / estimatedRequests
+}
