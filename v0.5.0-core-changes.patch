+    
+    // Check rotation
+    if f.currentSize+int64(len(data)) > f.maxSize {
+        if err := f.rotate(); err != nil {
+            return fmt.Errorf("failed to rotate log file: %w", err)
+        }
+    }
+    
+    n, err := f.file.Write(append(data, '\n'))
