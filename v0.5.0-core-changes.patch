+	if am.isReservedCommand(alias) {
+		return fmt.Errorf("cannot alias reserved command: %s", alias)
+	}
+	
+	am.aliases[alias] = &CommandAlias{
+		Alias:       alias,
+		Command:     command,
+		Description: description,
+	}
+	
+	return nil
+}
