+	defer s.handlersMu.Unlock()
+	
+	if _, exists := s.handlers[handlerID]; !exists {
+		return fmt.Errorf("handler not found: %s", handlerID)
+	}
+	
+	delete(s.handlers, handlerID)
+	return nil
