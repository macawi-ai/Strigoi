+	minLen   int
+}
+
+// NewKeywordFilter creates a new keyword filter
+func NewKeywordFilter(name string, keywords []string) *KeywordFilter {
+	kw := make(map[string]bool)
+	minLen := math.MaxInt
+	
+	for _, k := range keywords {
+		kw[k] = true
+		if len(k) < minLen {
+			minLen = len(k)
+		}
+	}
+	
+	return &KeywordFilter{
+		BaseFilter: BaseFilter{
