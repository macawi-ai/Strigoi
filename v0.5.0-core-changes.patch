+func (gb *GeminiBridge) InteractiveMode() {
+	scanner := bufio.NewScanner(os.Stdin)
+	
+	fmt.Println("ü§ñ Gemini A2A Bridge Interactive Mode")
+	fmt.Println("Commands: query, analyze, store, exit")
+	fmt.Println()
+	
+	for {
+		fmt.Print("gemini> ")
+		if !scanner.Scan() {
+			break
+		}
+		
+		input := scanner.Text()
+		parts := strings.Fields(input)
+		
+		if len(parts) == 0 {
+			continue
+		}
