+	}()
+	
+	text := string(data)
+	if !kf.caseSensitive {
+		text = strings.ToLower(text)
+	}
+	
+	for keyword := range kf.keywords {
+		if strings.Contains(text, keyword) {
+			kf.updateStats(true, time.Since(start))
+			return true
+		}
+	}
+	return false
+}
