+		alpha: alpha,
+		init:  false,
+	}
+}
+
+// Update adds a new observation
+func (s *ExponentialSmoothing) Update(observation float64) {
+	if !s.init {
+		s.value = observation
+		s.init = true
+		return
+	}
+	
+	s.value = s.alpha*observation + (1-s.alpha)*s.value
+}
