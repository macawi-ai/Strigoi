+func (dm *DefaultManager) StartAll(ctx context.Context) error {
+	dm.mu.RLock()
+	defer dm.mu.RUnlock()
+	
+	var errors []error
+	for id, stream := range dm.streams {
+		if !stream.IsActive() {
