+            resp.Body.Close()
+            discoveries = append(discoveries, actors.Discovery{
+                Type:       "push_gateway",
+                Identifier: p.pushGateway,
+                Properties: map[string]interface{}{
+                    "reachable": true,
+                    "status":    resp.StatusCode,
+                },
+                Confidence: 1.0,
+            })
+        }
+    }
+    
+    return &actors.ProbeResult{
